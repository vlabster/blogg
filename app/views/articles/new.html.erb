<%= form_for :article, url: articles_path  do |f| %>
 <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
      Эти ошибки мешают созданию статьи:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 

 <p>
    <%= f.label :Заголовок %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Текст %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit:'Сохранить статью' %>
  </p>
<% end %>
<%= link_to 'Назад', articles_path %>
